# WrtnLabs Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=wrtnlabs
POSTGRES_USER=wrtnlabs_user
POSTGRES_PASSWORD=wrtnlabs_secure_password_2025_CHANGE_ME

# Full Database URL (used by services)
DATABASE_URL=postgresql://wrtnlabs_user:wrtnlabs_secure_password_2025_CHANGE_ME@postgres:5432/wrtnlabs

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ============================================================================
# AI MODEL CONFIGURATION (Z.ai GLM Models)
# ============================================================================
ZAI_API_KEY=your_zai_api_key_here
ZAI_MODEL=glm-4.6
ZAI_VISION_MODEL=glm-4.5v
ZAI_BASE_URL=https://api.z.ai/v1

# ============================================================================
# SERVICE PORTS
# ============================================================================
BACKEND_PORT=3000
AUTOBE_PORT=3001
AGENTICA_PORT=3002
VECTOR_STORE_PORT=3003
CONNECTORS_PORT=3004
AUTOVIEW_PORT=3005

# ============================================================================
# VECTOR STORE CONFIGURATION
# ============================================================================
CHROMADB_URL=http://chromadb:8000
VECTOR_DB_TYPE=chromadb
EMBEDDING_MODEL=text-embedding-ada-002

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
JWT_SECRET=generate_a_secure_random_string_here_min_32_chars
SESSION_SECRET=generate_another_secure_random_string_here
ENCRYPTION_KEY=generate_encryption_key_32_chars_minimum

# ============================================================================
# EXTERNAL CONNECTORS (Optional)
# ============================================================================
# GitHub Integration
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your_slack_signing_secret

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=info
LOG_DIR=/var/log/wrtnlabs

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=production

# ============================================================================
# CORS SETTINGS
# ============================================================================
CORS_ORIGIN=http://localhost:3005,http://localhost:80
ALLOWED_ORIGINS=http://localhost:3005,http://localhost:80

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

