/// 사용자 액션 로그
model user_action_logs {
  id          String   @id @db.Uuid
  user_id     String   @db.Uuid
  action_type String   @db.VarChar
  target_type String   @db.VarChar
  target_id   String?  @db.Uuid
  detail      String?
  created_at  DateTime @db.Timestamptz

  user users @relation(fields: [user_id], references: [id])
}

/// 추천/알고리즘 로그
model recommend_logs {
  id          String   @id @db.Uuid
  user_id     String   @db.Uuid
  object_type String   @db.VarChar
  object_id   String   @db.Uuid
  reason      String?
  created_at  DateTime @db.Timestamptz

  user users  @relation(fields: [user_id], references: [id])
  post posts? @relation(fields: [object_id], references: [id])
}

/// 알림(Notification)
model notifications {
  id                String   @id @db.Uuid
  user_id           String   @db.Uuid
  notification_type String   @db.VarChar
  content           String
  object_type       String   @db.VarChar
  object_id         String?  @db.Uuid
  read              Boolean  @db.Boolean
  created_at        DateTime @db.Timestamptz

  user users @relation(fields: [user_id], references: [id])
}
